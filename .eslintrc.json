{
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "env": {
    "jquery": true,
    "es6": true
  },
  "overrides": [
    {
      "files": ["src/**/*.js"],
      "extends": ["standard", "htmlacademy/es6"],
      "rules": {
        "indent": ["error", 2],
        "semi": ["error", "always"],
        "quotes": ["error", "backtick"]
      }
    }
  ]
}
